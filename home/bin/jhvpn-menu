#!/bin/bash
# JHU VPN menu - smart options based on VPN state

# Check if VPN tunnel is actually established (tun interface exists)
if ip link show tun0 &>/dev/null; then
    # VPN is up
    action=$(echo -e "Down\nHide\nKill" | walker --dmenu -p "JHU VPN:")
else
    # VPN is down
    action=$(echo -e "Up\nHide\nKill" | walker --dmenu -p "JHU VPN:")
fi

case "$action" in
    Up) ~/.bin/jhvpn-up ;;
    Down) ~/.bin/jhvpn-down ;;
    Hide) ~/.bin/jhvpn-hide ;;
    Kill) killall pulseUI pulselauncher 2>/dev/null ;;
esac
