#!/bin/bash
# Wrapper for NoMachine with HiDPI scaling

# Disable force_zero_scaling so Hyprland scales at 2x (makes NoMachine bigger)
hyprctl keyword xwayland:force_zero_scaling false

/usr/NX/bin/nxplayer "$@"

# Restore default (sharp but small for other XWayland apps)
hyprctl keyword xwayland:force_zero_scaling true
