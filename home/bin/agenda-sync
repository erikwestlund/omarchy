#!/bin/bash
# Sync agenda to cache file

CACHE_FILE="$HOME/.cache/agenda"

gcalcli agenda \
    --calendar "Family" \
    --calendar "JHU" \
    --calendar "Personal" \
    --nostarted \
    --details=end \
    "$(date +%Y-%m-%d)" \
    "$(date -d '+3 days' +%Y-%m-%d)" \
    > "$CACHE_FILE" 2>/dev/null
