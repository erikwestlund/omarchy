# Omarchy aliases (Arch Linux)

# Fix terminal type for SSH (ghostty compatibility)
alias ssh='TERM=xterm-256color ssh'

# Easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"
alias -- -="cd -"

# Shortcuts
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias projects="cd ~/Projects"
alias p="cd ~/Projects"
alias pm="cd ~/Omarchy/projects"

# Omarchy
alias omarchy="cd ~/Omarchy"
alias oma="cd ~/Omarchy"
alias Omarchy="cd ~/Omarchy"
alias Oma="cd ~/Omarchy"
om() { ANSIBLE_CONFIG=~/Omarchy/ansible/ansible.cfg ansible-playbook ~/Omarchy/ansible/playbook.yml -l "$(cat ~/.machine)" "$@"; }
alias om-laptop="ANSIBLE_CONFIG=~/Omarchy/ansible/ansible.cfg ansible-playbook ~/Omarchy/ansible/playbook.yml -l laptop"
alias om-desktop="ANSIBLE_CONFIG=~/Omarchy/ansible/ansible.cfg ansible-playbook ~/Omarchy/ansible/playbook.yml -l desktop"
alias om-config='om --tags dotfiles'
alias om-packages='om --tags packages'
alias om-webapps='om --tags webapps'
alias om-apps='om --tags packages,webapps'
alias om-software='om --tags packages,webapps'
alias om-secrets='om --tags secrets'
alias om-keyd='om --tags keyd'
alias vscode-sync='om --tags vscode'
alias vscode-sync-ext='om --tags vscode -e "vscode_install_extensions=true"'
alias om-all='om'
alias om-sync='git -C ~/Omarchy pull'

# Ansible
alias ap="ansible-playbook"
alias vault-edit="ansible-vault edit ~/Omarchy/ansible/vault/secrets.yml --vault-password-file ~/.vault_pass"

# Calendar (khal + vdirsyncer)
alias calsync="vdirsyncer sync"
alias cal="khal calendar"
alias agenda="khal list today 7d"
alias today="khal list today today"

# ls with color (GNU ls)
alias ls="ls --color=auto"
alias l="ls -lF"
alias la="ls -lAF"
alias lsd="ls -lF | grep --color=never '^d'"

# Colored grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Enable aliases to be sudo'ed
alias sudo='sudo '

# Get week number
alias week='date +%V'

# IP addresses
alias myip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="hostname -I | awk '{print \$1}'"

# Flush DNS cache (systemd-resolved)
alias flushdns="sudo systemd-resolve --flush-caches"

# Clipboard (requires xclip)
alias clip="xclip -selection clipboard"
alias c="tr -d '\n' | xclip -selection clipboard"

# Intuitive map function
alias map="xargs -n1"

# HTTP method aliases (using curl)
alias GET='curl -s -X GET'
alias HEAD='curl -s -I'
alias POST='curl -s -X POST'
alias PUT='curl -s -X PUT'
alias DELETE='curl -s -X DELETE'
alias OPTIONS='curl -s -X OPTIONS'

# Volume control (requires pamixer or amixer)
alias stfu="pamixer -m"
alias pumpitup="pamixer --set-volume 100"

# Lock screen (requires i3lock, swaylock, or similar)
alias afk="loginctl lock-session"

# Reload the shell
alias reload="exec ${SHELL} -l"

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'

