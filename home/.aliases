# Laravel/PHP docker wrappers - convention-based auto-detection
# If in ~/Projects/{name} and {name}-php container is running, use it
_php_container() {
    [[ "$PWD" =~ ^/home/erik/Projects/([^/]+) ]] || return 1
    local container="${BASH_REMATCH[1]}-php"
    docker container inspect "$container" &>/dev/null && echo "$container"
}

php() {
    local container=$(_php_container)
    if [[ -n "$container" ]]; then
        docker exec -it "$container" php "$@"
    else
        command php "$@"
    fi
}

art() {
    local container=$(_php_container)
    if [[ -n "$container" ]]; then
        docker exec -it "$container" php artisan "$@"
    else
        command php artisan "$@"
    fi
}

composer() {
    local container=$(_php_container)
    if [[ -n "$container" ]]; then
        docker exec -it "$container" composer "$@"
    else
        command composer "$@"
    fi
}

