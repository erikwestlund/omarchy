# NVMe SMART info
nvme-info() {
    sudo nvme list
    echo
    if [[ -n "$1" ]]; then
        sudo nvme smart-log "/dev/nvme$1"
    else
        for dev in /dev/nvme[0-9]; do
            echo "=== $dev ==="
            sudo nvme smart-log "$dev"
            echo
        done
    fi
}

