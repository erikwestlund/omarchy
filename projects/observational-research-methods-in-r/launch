#!/bin/bash
# Launch script for observational-research-methods-in-r
#
# This script launches the observational-research-methods-in-r development environment with:
# - Editor on the active workspace
# - Notification system (shows progress updates)

# === Project Config ===
PROJECT_NAME="observational-research-methods-in-r"
PROJECT_DIR="/home/erik/Projects/observational-research-methods-in-r"
WORKSPACE_FILE="$HOME/Omarchy/projects/observational-research-methods-in-r/observational-research-methods-in-r.code-workspace"
EDITOR="/usr/share/positron/bin/positron"
VIEW_URL=""

# === Launch ===
notify-send -u low "Observational Research Methods" "Launching..." -t 5000

# Start tmux session (if not already running) - run detached so it doesn't block
TMUX_SCRIPT="$HOME/Omarchy/projects/observational-research-methods-in-r/tmux.sh"
if [ -x "$TMUX_SCRIPT" ]; then
    "$TMUX_SCRIPT" </dev/null &
    sleep 0.5
fi

# Open browser first (right side), then editor (left side)
if [ -n "$VIEW_URL" ]; then
    chromium --new-window "$VIEW_URL" &
    sleep 0.3
fi

$EDITOR "$WORKSPACE_FILE" &

notify-send -u low "Observational Research Methods" "Ready!" -t 3000
