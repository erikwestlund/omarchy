#!/bin/bash
# Bootstrap script for observational-research-methods-in-r
# Runs ansible to ensure project is ready to run

set -e

OMARCHY_DIR="$HOME/Omarchy"
MACHINE=$(cat ~/.machine 2>/dev/null || echo "laptop")

echo "Bootstrapping observational-research-methods-in-r..."

ANSIBLE_CONFIG="$OMARCHY_DIR/ansible/ansible.cfg" ansible-playbook \
    "$OMARCHY_DIR/ansible/playbook.yml" \
    --limit "$MACHINE" \
    --tags bootstrap \
    -e "project_name=observational-research-methods-in-r"

echo ""
echo "Bootstrap complete! Run 'lobsr' to launch."
