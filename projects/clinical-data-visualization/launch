#!/bin/bash
# Launch script for clinical-data-visualization
#
# This script launches the clinical-data-visualization development environment with:
# - Editor on the active workspace
# - Notification system (shows progress updates)

# === Project Config ===
PROJECT_NAME="clinical-data-visualization"
PROJECT_DIR="/home/erik/Projects/clinical-data-visualization"
WORKSPACE_FILE="$HOME/Omarchy/projects/clinical-data-visualization/clinical-data-visualization.code-workspace"
EDITOR="/usr/share/positron/bin/positron"
VIEW_URL=""

# === Launch ===
notify-send -u low "Clinical Data Visualization" "Launching..." -t 5000

# Start tmux session (if not already running) - run detached so it doesn't block
TMUX_SCRIPT="$HOME/Omarchy/projects/clinical-data-visualization/tmux.sh"
if [ -x "$TMUX_SCRIPT" ]; then
    "$TMUX_SCRIPT" </dev/null &
    sleep 0.5
fi

# Open browser first (right side), then editor (left side)
if [ -n "$VIEW_URL" ]; then
    chromium --new-window "$VIEW_URL" &
    sleep 0.3
fi

$EDITOR "$WORKSPACE_FILE" &

notify-send -u low "Clinical Data Visualization" "Ready!" -t 3000
