#!/bin/bash
# Bootstrap script for clinical-data-visualization
# Runs ansible to ensure project is ready to run

set -e

OMARCHY_DIR="$HOME/Omarchy"
MACHINE=$(cat ~/.machine 2>/dev/null || echo "laptop")

echo "Bootstrapping clinical-data-visualization..."

ANSIBLE_CONFIG="$OMARCHY_DIR/ansible/ansible.cfg" ansible-playbook \
    "$OMARCHY_DIR/ansible/playbook.yml" \
    --limit "$MACHINE" \
    --tags bootstrap \
    -e "project_name=clinical-data-visualization"

echo ""
echo "Bootstrap complete! Run 'lcdv' to launch."
