#!/bin/bash
# Bootstrap script for wordle-group - ensures project is ready to run
# Run this on a fresh machine or when setting up the project

set -e

# === Project Config ===
PROJECT_NAME="wordle-group"
PROJECT_DIR="/home/erik/Projects/wordle-group"
GIT_REPO="git@github.com:erikwestlund/wordlegroup.git"
SECRETS_DIR="$HOME/.secrets/wordle-group"

# Required secrets (relative to SECRETS_DIR -> PROJECT_DIR)
SECRETS=(
    ".env"
    "auth.json"
)

echo "Bootstrapping $PROJECT_NAME..."

# === 1. Ensure repo is cloned ===
if [ -n "$GIT_REPO" ]; then
    if [ -d "$PROJECT_DIR/.git" ]; then
        echo "[OK] Repository already exists at $PROJECT_DIR"
    else
        echo "[...] Cloning repository..."
        mkdir -p "$(dirname "$PROJECT_DIR")"
        git clone "$GIT_REPO" "$PROJECT_DIR"
        echo "[OK] Repository cloned"
    fi
else
    if [ -d "$PROJECT_DIR" ]; then
        echo "[OK] Project directory exists at $PROJECT_DIR"
    else
        echo "[...] Creating project directory..."
        mkdir -p "$PROJECT_DIR"
        echo "[OK] Project directory created"
    fi
fi

# === 2. Generate docker-compose.yml ===
if [ -f "$PROJECT_DIR/docker-compose.yml" ] && [ "$1" != "--force" ]; then
    echo "[OK] docker-compose.yml already exists (use --force to regenerate)"
else
    echo "[...] Generating docker-compose.yml..."
    cat > "$PROJECT_DIR/docker-compose.yml" << 'DOCKER_COMPOSE_EOF'
services:
  php:
    build:
      context: .
      dockerfile: docker/php/Dockerfile
    container_name: wordle-group-php
    restart: on-failure
    working_dir: /var/www/html
    volumes:
      - ./:/var/www/html
      - ./docker/php/php.ini:/usr/local/etc/php/conf.d/custom.ini:ro
    networks:
      - wordle-group-network
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy
    environment:
      - PHP_MEMORY_LIMIT=512M

  nginx:
    image: nginx:alpine
    container_name: wordle-group-nginx
    restart: on-failure
    ports:
      - "127.0.0.1:8033:80"
    volumes:
      - ./:/var/www/html:ro
      - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
    networks:
      - wordle-group-network
    depends_on:
      - php

  queue:
    build:
      context: .
      dockerfile: docker/php/Dockerfile
    container_name: wordle-group-queue
    restart: on-failure
    working_dir: /var/www/html
    volumes:
      - ./:/var/www/html
      - ./docker/php/php.ini:/usr/local/etc/php/conf.d/custom.ini:ro
    networks:
      - wordle-group-network
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy
    command: php artisan queue:work --sleep=3 --tries=3 --max-time=3600

  postgres:
    image: postgres:17-alpine
    container_name: wordle-group-postgres
    restart: on-failure
    environment:
      POSTGRES_DB: wordle_group
      POSTGRES_USER: wordle_group
      POSTGRES_PASSWORD: wordle-group-dev-secret
    volumes:
      - wordle-group-postgres-data:/var/lib/postgresql/data
      - ./storage/app/dumps:/dumps
    ports:
      - "127.0.0.1:5443:5432"
    networks:
      - wordle-group-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U wordle_group -d wordle_group"]
      interval: 10s
      timeout: 5s
      retries: 5

  redis:
    image: redis:7-alpine
    container_name: wordle-group-redis
    restart: on-failure
    volumes:
      - wordle-group-redis-data:/data
    ports:
      - "127.0.0.1:6394:6379"
    networks:
      - wordle-group-network
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

  minio:
    image: minio/minio:latest
    container_name: wordle-group-minio
    restart: on-failure
    ports:
      - "127.0.0.1:9015:9000"
      - "127.0.0.1:9016:9001"
    environment:
      MINIO_ROOT_USER: wordle-group
      MINIO_ROOT_PASSWORD: wordle-group-dev-secret
    command: server /data --console-address ":9001"
    volumes:
      - wordle-group-minio-data:/data
    networks:
      - wordle-group-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/minio/health/live"]
      interval: 30s
      timeout: 20s
      retries: 3

  minio-setup:
    image: minio/mc:latest
    container_name: wordle-group-minio-setup
    depends_on:
      minio:
        condition: service_healthy
    entrypoint: >
      /bin/sh -c "
      mc alias set wordle-group http://minio:9000 wordle-group wordle-group-dev-secret;
      mc mb --ignore-existing wordle-group/wordle_group-default;
      mc mb --ignore-existing wordle-group/wordle_group-test;
      mc anonymous set download wordle-group/wordle_group-default;
      mc anonymous set download wordle-group/wordle_group-test;
      echo 'MinIO setup complete';
      "
    networks:
      - wordle-group-network

  mailpit:
    image: axllent/mailpit:latest
    container_name: wordle-group-mailpit
    restart: on-failure
    ports:
      - "127.0.0.1:1033:1025"
      - "127.0.0.1:8034:8025"
    networks:
      - wordle-group-network

networks:
  wordle-group-network:
    driver: bridge

volumes:
  wordle-group-postgres-data:
  wordle-group-redis-data:
  wordle-group-minio-data:
DOCKER_COMPOSE_EOF
    echo "[OK] docker-compose.yml generated"
fi

# === 3. Copy Docker configs from pequod (reference project) ===
REFERENCE_PROJECT="$HOME/Projects/pequod"
if [ -d "$REFERENCE_PROJECT/docker/php" ]; then
    mkdir -p "$PROJECT_DIR/docker/php"
    if [ ! -f "$PROJECT_DIR/docker/php/Dockerfile" ]; then
        echo "[...] Copying Docker PHP Dockerfile..."
        cp "$REFERENCE_PROJECT/docker/php/Dockerfile" "$PROJECT_DIR/docker/php/" 2>/dev/null || true
        echo "[OK] Docker PHP Dockerfile copied"
    else
        echo "[OK] Docker PHP Dockerfile already exists"
    fi
    if [ ! -f "$PROJECT_DIR/docker/php/php.ini" ]; then
        echo "[...] Copying Docker PHP php.ini..."
        cp "$REFERENCE_PROJECT/docker/php/php.ini" "$PROJECT_DIR/docker/php/" 2>/dev/null || true
        echo "[OK] Docker PHP php.ini copied"
    else
        echo "[OK] Docker PHP php.ini already exists"
    fi
fi

if [ -d "$REFERENCE_PROJECT/docker/nginx" ]; then
    mkdir -p "$PROJECT_DIR/docker/nginx"
    if [ ! -f "$PROJECT_DIR/docker/nginx/default.conf" ]; then
        echo "[...] Copying Docker nginx config..."
        cp "$REFERENCE_PROJECT/docker/nginx/default.conf" "$PROJECT_DIR/docker/nginx/" 2>/dev/null || true
        echo "[OK] Docker nginx config copied"
    else
        echo "[OK] Docker nginx config already exists"
    fi
fi

# === 4. Ensure secrets are in place ===
if [ ! -d "$SECRETS_DIR" ]; then
    echo "[WARN] Secrets directory not found: $SECRETS_DIR"
    echo "       Create it and add required files, or run 'secrets-pull' if using B2"
else
    for secret in "${SECRETS[@]}"; do
        src="$SECRETS_DIR/$secret"
        dest="$PROJECT_DIR/$secret"

        if [ ! -f "$src" ]; then
            echo "[WARN] Secret not found: $src"
            continue
        fi

        if [ -f "$dest" ]; then
            if cmp -s "$src" "$dest"; then
                echo "[OK] Secret already in place: $secret"
            else
                echo "[...] Updating secret: $secret"
                cp "$src" "$dest"
                chmod 600 "$dest"
                echo "[OK] Secret updated: $secret"
            fi
        else
            echo "[...] Copying secret: $secret"
            cp "$src" "$dest"
            chmod 600 "$dest"
            echo "[OK] Secret copied: $secret"
        fi
    done
fi

# === 5. Build Docker images (only if needed) ===
if [ -f "$PROJECT_DIR/docker-compose.yml" ]; then
    # Check if php image exists
    if docker images | grep -q "wordle-group-php" && [ "$1" != "--force" ]; then
        echo "[OK] Docker images already built (use --force to rebuild)"
    else
        echo "[...] Building Docker images..."
        (cd "$PROJECT_DIR" && docker compose build)
        echo "[OK] Docker images built"
    fi
else
    echo "[SKIP] No docker-compose.yml found"
fi

# === 6. Start Docker services ===
echo "[...] Starting Docker services..."
(cd "$PROJECT_DIR" && docker compose up -d)
echo "[OK] Docker services started"

# Fix permissions on directories that Docker may have created as root
if [ -d "$PROJECT_DIR/storage" ]; then
    echo "[...] Fixing storage permissions..."
    sudo chown -R "$(id -u):$(id -g)" "$PROJECT_DIR/storage"
    echo "[OK] Storage permissions fixed"
fi

# Wait for PHP container to be ready
echo "[...] Waiting for services to be healthy..."
sleep 5

# === 7. Install PHP dependencies ===
if [ -f "$PROJECT_DIR/composer.json" ]; then
    echo "[...] Installing PHP dependencies..."
    (cd "$PROJECT_DIR" && docker compose exec -T php composer install --no-interaction --prefer-dist --optimize-autoloader)
    echo "[OK] PHP dependencies installed"
else
    echo "[SKIP] No composer.json found"
fi

# === 8. Install Node dependencies ===
if [ -f "$PROJECT_DIR/package.json" ]; then
    echo "[...] Installing Node dependencies..."
    (cd "$PROJECT_DIR" && docker compose exec -T php npm install)
    echo "[OK] Node dependencies installed"
else
    echo "[SKIP] No package.json found"
fi



echo ""
echo "Bootstrap complete! Run 'launch' to start $PROJECT_NAME."
