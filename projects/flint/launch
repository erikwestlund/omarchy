#!/bin/bash
# Launch script for flint
#
# This script launches the flint development environment with:
# - Editor and browser on the active workspace
# - Notification system (shows progress updates)

# === Project Config ===
PROJECT_NAME="flint"
PROJECT_DIR="/home/erik/Projects/flint"
WORKSPACE_FILE="$HOME/Omarchy/projects/flint/flint.code-workspace"
EDITOR="/usr/bin/code"
VIEW_URL="http://flint.test"

# === Launch ===
notify-send -u low "Flint" "Launching..." -t 5000

# Start tmux session (if not already running)
TMUX_SCRIPT="$HOME/Omarchy/projects/flint/tmux.sh"
if [ -x "$TMUX_SCRIPT" ]; then
    "$TMUX_SCRIPT" </dev/null &
    sleep 0.5
fi

# Open browser first (right side), then editor (left side)
if [ -n "$VIEW_URL" ]; then
    chromium --new-window "$VIEW_URL" &
    sleep 0.3
fi

$EDITOR "$WORKSPACE_FILE" &

notify-send -u low "Flint" "Ready!" -t 3000
