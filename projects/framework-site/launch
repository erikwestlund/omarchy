#!/bin/bash
# Launch script for framework-site
#
# This script launches the framework-site development environment with:
# - Editor on the active workspace
# - Notification system (shows progress updates)

# === Project Config ===
PROJECT_NAME="framework-site"
PROJECT_DIR="$HOME/Projects/framework-site"
WORKSPACE_FILE="$HOME/Omarchy/projects/framework-site/framework-site.code-workspace"
EDITOR="/usr/bin/code"
VIEW_URL=""

# === Launch ===
notify-send -u low "Framework Site" "Launching..." -t 5000

# Start tmux session (if not already running)
TMUX_SCRIPT="$HOME/Omarchy/projects/framework-site/tmux.sh"
if [ -x "$TMUX_SCRIPT" ]; then
    "$TMUX_SCRIPT" </dev/null &
    sleep 0.5
fi

# Start Docker services
if [ -f "$PROJECT_DIR/docker-compose.yml" ]; then
    notify-send -u low "Framework Site" "Starting Docker services..." -t 4000
    (cd "$PROJECT_DIR" && docker compose up -d)
fi

# Open browser first (right side), then editor (left side)
if [ -n "$VIEW_URL" ]; then
    chromium --new-window "$VIEW_URL" &
    sleep 0.3
fi

$EDITOR "$WORKSPACE_FILE" &

notify-send -u low "Framework Site" "Ready!" -t 3000
