#!/bin/bash
# Launch script for geu-legal-gender-recognition
#
# This script launches the geu-legal-gender-recognition development environment with:
# - Editor on the active workspace
# - Notification system (shows progress updates)

# === Project Config ===
PROJECT_NAME="geu-legal-gender-recognition"
PROJECT_DIR="/home/erik/Projects/geu-legal-gender-recognition"
WORKSPACE_FILE="$HOME/Omarchy/projects/geu-legal-gender-recognition/geu-legal-gender-recognition.code-workspace"
EDITOR="/usr/share/positron/bin/positron"
VIEW_URL=""

# === Launch ===
notify-send -u low "GEU Legal Gender Recognition" "Launching..." -t 5000

# Start tmux session (if not already running) - run detached so it doesn't block
TMUX_SCRIPT="$HOME/Omarchy/projects/geu-legal-gender-recognition/tmux.sh"
if [ -x "$TMUX_SCRIPT" ]; then
    "$TMUX_SCRIPT" </dev/null &
    sleep 0.5
fi

# Open browser first (right side), then editor (left side)
if [ -n "$VIEW_URL" ]; then
    chromium --new-window "$VIEW_URL" &
    sleep 0.3
fi

$EDITOR "$WORKSPACE_FILE" &

notify-send -u low "GEU Legal Gender Recognition" "Ready!" -t 3000
