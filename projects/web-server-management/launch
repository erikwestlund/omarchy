#!/bin/bash
# Launch script for web-server-management
#
# This script launches the web-server-management development environment with:
# - Editor on the active workspace
# - Notification system (shows progress updates)

# === Project Config ===
PROJECT_NAME="web-server-management"
PROJECT_DIR="~/Projects/web-server-management"
WORKSPACE_FILE="$HOME/Omarchy/projects/web-server-management/web-server-management.code-workspace"
EDITOR="/usr/bin/code"
VIEW_URL=""

# === Launch ===
notify-send -u low "Web Server Management" "Launching..." -t 5000

# Start tmux session (if not already running) - run detached so it doesn't block
TMUX_SCRIPT="$HOME/Omarchy/projects/web-server-management/tmux.sh"
if [ -x "$TMUX_SCRIPT" ]; then
    "$TMUX_SCRIPT" </dev/null &
    sleep 0.5
fi

# Open browser first (right side), then editor (left side)
if [ -n "$VIEW_URL" ]; then
    chromium --new-window "$VIEW_URL" &
    sleep 0.3
fi

$EDITOR "$WORKSPACE_FILE" &

notify-send -u low "Web Server Management" "Ready!" -t 3000
