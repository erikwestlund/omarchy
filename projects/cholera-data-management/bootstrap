#!/bin/bash
# Bootstrap script for cholera-data-management
# Runs ansible to ensure project is ready to run

set -e

OMARCHY_DIR="$HOME/Omarchy"
MACHINE=$(cat ~/.machine 2>/dev/null || echo "laptop")

echo "Bootstrapping cholera-data-management..."

ANSIBLE_CONFIG="$OMARCHY_DIR/ansible/ansible.cfg" ansible-playbook \
    "$OMARCHY_DIR/ansible/playbook.yml" \
    --limit "$MACHINE" \
    --tags bootstrap \
    -e "project_name=cholera-data-management"

echo ""
echo "Bootstrap complete! Run 'lcholera' to launch."
