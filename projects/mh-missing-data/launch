#!/bin/bash
# Launch script for mh-missing-data
#
# This script launches the mh-missing-data development environment with:
# - Editor on the active workspace
# - Notification system (shows progress updates)

# === Project Config ===
PROJECT_NAME="mh-missing-data"
PROJECT_DIR="/home/erik/Projects/mh-missing-data"
WORKSPACE_FILE="$HOME/Omarchy/projects/mh-missing-data/mh-missing-data.code-workspace"
EDITOR="/usr/bin/code"
VIEW_URL=""

# === Launch ===
notify-send -u low "MH Missing Data" "Launching..." -t 5000

# Start tmux session (if not already running)
TMUX_SCRIPT="$HOME/Omarchy/projects/mh-missing-data/tmux.sh"
if [ -x "$TMUX_SCRIPT" ]; then
    "$TMUX_SCRIPT" </dev/null &
    sleep 0.5
fi

# Open browser first (right side), then editor (left side)
if [ -n "$VIEW_URL" ]; then
    chromium --new-window "$VIEW_URL" &
    sleep 0.3
fi

$EDITOR "$WORKSPACE_FILE" &

notify-send -u low "MH Missing Data" "Ready!" -t 3000
