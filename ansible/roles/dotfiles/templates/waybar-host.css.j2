/* Host-specific Waybar overrides */
/* Generated by Ansible - do not edit directly */

window#waybar {
    margin: {{ waybar_margin_top | default(2) }}px {{ waybar_margin_right | default(16) }}px {{ waybar_margin_bottom | default(2) }}px {{ waybar_margin_left | default(16) }}px;
    padding: 0 16px;
    background-color: rgba(30, 30, 46, 0.65);
{% if waybar_border_radius is defined %}
    border-radius: {{ waybar_border_radius }};
{% endif %}
}

* {
    font-size: {{ waybar_font_size | default(12) }}px;
}

/* Workspace indicators - increased padding and font */
#custom-ws-U,
#custom-ws-1,
#custom-ws-2,
#custom-ws-3,
#custom-ws-4,
#custom-ws-5,
#custom-ws-6,
#custom-ws-7,
#custom-ws-8,
#custom-ws-9,
#custom-ws-10,
#custom-ws-11,
#custom-ws-12 {
    font-size: 12px;
    padding: 2px 6px;
    margin: 4px 2px;
}

/* Focused workspace - same size */
#custom-ws-U.focused,
#custom-ws-1.focused,
#custom-ws-2.focused,
#custom-ws-3.focused,
#custom-ws-4.focused,
#custom-ws-5.focused,
#custom-ws-6.focused,
#custom-ws-7.focused,
#custom-ws-8.focused,
#custom-ws-9.focused,
#custom-ws-10.focused,
#custom-ws-11.focused,
#custom-ws-12.focused {
    font-size: 12px;
    padding: 2px 6px;
    margin: 4px 2px;
    margin-left: 2px;
    margin-right: 2px;
}

/* Clock, weather, media */
#clock,
#custom-media,
#custom-update,
#custom-screenrecording-indicator {
    font-size: 12px;
}

#clock {
    margin-top: -1px;
}

/* Icon spacing */
#cpu,
#battery,
#pulseaudio,
#bluetooth,
#network,
#custom-omarchy,
#custom-screenrecording-indicator,
#custom-update {
    margin: 0 16px;
}

#network {
    margin-right: 28px;
}

/* Weather */
#custom-weather {
    font-size: 11px;
    margin-right: 20px;
    margin-top: 1px;
    padding: 0;
}

#custom-sysinfo {
    margin-right: 16px;
}

#custom-darkman {
    margin-top: 0px;
}
