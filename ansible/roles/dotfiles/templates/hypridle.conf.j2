# Host-specific hypridle configuration
# Deployed by Ansible - edit the template in ansible/roles/dotfiles/templates/
#
# To revert: remove hypridle_after_sleep_delay from host_vars/laptop.yml
# and re-run ansible, or simply delete ~/.config/hypr/hypridle.conf

general {
    lock_cmd = omarchy-lock-screen                         # lock screen and 1password
    before_sleep_cmd = loginctl lock-session               # lock before suspend.
{% if hypridle_after_sleep_delay | default(0) > 0 %}
    # LAPTOP FIX: Aggressive display wake sequence for AMD GPU s2idle issues.
    # Wait for GPU to stabilize, force DPMS on, and re-detect monitors.
    # See: https://github.com/basecamp/omarchy/issues/3293
    after_sleep_cmd = sleep {{ hypridle_after_sleep_delay }} && hyprctl dispatch dpms on && sleep 0.5 && hyprctl dispatch dpms on
{% else %}
    after_sleep_cmd = hyprctl dispatch dpms on             # to avoid having to press a key twice to turn on the display.
{% endif %}
    inhibit_sleep = 3                                      # wait until screen is locked
}

listener {
    timeout = 150                                             # 2.5min
    on-timeout = pidof hyprlock || omarchy-launch-screensaver # start screensaver (if we haven't locked already)
}

listener {
    timeout = 300                      # 5min
    on-timeout = loginctl lock-session # lock screen when timeout has passed
}

listener {
    timeout = 330                                            # 5.5min
    on-timeout = hyprctl dispatch dpms off                   # screen off when timeout has passed
    on-resume = hyprctl dispatch dpms on && brightnessctl -r # screen on when activity is detected
}
