# keyd app-specific bindings (via keyd-application-mapper)

[chromium]
{% for shortcut in keyd_browser_shortcuts %}
meta.{{ shortcut.key }} = {{ shortcut.action }}
{% endfor %}

[code]
meta.q = C-q
meta.p = C-p
meta.s = C-s
meta.v = C-v
meta.w = C-w
meta.z = C-z
meta.S-z = C-S-z
meta.f = C-f
meta.S-p = C-S-p
meta.t = C-t
meta.r = C-r
meta.[ = C-[
meta.] = C-]
meta.A-k = C-k
meta.C-k = C-k
meta.C-d = C-d
meta.A-l = C-A-l
