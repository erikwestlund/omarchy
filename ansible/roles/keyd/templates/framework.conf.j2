[ids]
# Framework laptop internal keyboard
0001:0001
# Framework hotkey device (media keys, rfkill, etc)
32ac:0006

[main]
# Swap Alt and Super (Meta)
leftalt = leftmeta
leftmeta = leftalt
rightalt = rightmeta
rightmeta = rightalt

[meta]
# System-wide shortcuts
{% for shortcut in keyd_system_shortcuts.meta %}
{{ shortcut.key }} = {{ shortcut.action }}
{% endfor %}

{% if keyd_system_shortcuts.meta_shift | length > 0 %}
[meta+shift]
{% for shortcut in keyd_system_shortcuts.meta_shift %}
{{ shortcut.key }} = {{ shortcut.action }}
{% endfor %}
{% endif %}

[meta+alt]
{% for shortcut in keyd_system_shortcuts.meta_alt %}
{{ shortcut.key }} = {{ shortcut.action }}
{% endfor %}
