services:
  # ===================
  # Application Services
  # ===================
  php:
    build:
      context: .
      dockerfile: docker/php/Dockerfile
    container_name: {{ project_name }}-php
    restart: on-failure
    working_dir: /var/www/html
    volumes:
      - ./:/var/www/html
      - ./docker/php/php.ini:/usr/local/etc/php/conf.d/custom.ini:ro
    networks:
      - {{ project_name }}-network
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy
    environment:
      - PHP_MEMORY_LIMIT=512M

  nginx:
    image: nginx:alpine
    container_name: {{ project_name }}-nginx
    restart: on-failure
    ports:
      - "127.0.0.1:{{ nginx_port | default('8010') }}:80"
    volumes:
      - ./:/var/www/html:ro
      - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
    networks:
      - {{ project_name }}-network
    depends_on:
      - php

  # ===================
  # Queue Worker
  # ===================
  queue:
    build:
      context: .
      dockerfile: docker/php/Dockerfile
    container_name: {{ project_name }}-queue
    restart: on-failure
    working_dir: /var/www/html
    volumes:
      - ./:/var/www/html
      - ./docker/php/php.ini:/usr/local/etc/php/conf.d/custom.ini:ro
    networks:
      - {{ project_name }}-network
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy
    command: php artisan queue:work --sleep=3 --tries=3 --max-time=3600

  # ===================
  # Data Services
  # ===================
  postgres:
    image: postgres:17-alpine
    container_name: {{ project_name }}-postgres
    restart: on-failure
    environment:
      POSTGRES_DB: {{ project_name | replace('-', '_') }}
      POSTGRES_USER: {{ project_name | replace('-', '_') }}
      POSTGRES_PASSWORD: {{ project_name }}-dev-secret
    volumes:
      - {{ project_name }}-postgres-data:/var/lib/postgresql/data
{% if include_dumps_volume | default(true) %}
      - ./storage/app/dumps:/dumps
{% endif %}
    ports:
      - "127.0.0.1:{{ postgres_port | default('5440') }}:5432"
    networks:
      - {{ project_name }}-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ project_name | replace('-', '_') }} -d {{ project_name | replace('-', '_') }}"]
      interval: 10s
      timeout: 5s
      retries: 5

  redis:
    image: redis:7-alpine
    container_name: {{ project_name }}-redis
    restart: on-failure
    volumes:
      - {{ project_name }}-redis-data:/data
    ports:
      - "127.0.0.1:{{ redis_port | default('6390') }}:6379"
    networks:
      - {{ project_name }}-network
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

{% if include_meilisearch | default(false) %}
  # ===================
  # Meilisearch (Search Engine)
  # ===================
  meilisearch:
    image: getmeili/meilisearch:latest
    container_name: {{ project_name }}-meilisearch
    restart: on-failure
    environment:
      MEILI_ENV: development
      MEILI_MASTER_KEY: {{ project_name }}-dev-secret
      MEILI_NO_ANALYTICS: true
    volumes:
      - {{ project_name }}-meilisearch-data:/meili_data
    ports:
      - "127.0.0.1:{{ meilisearch_port | default('7700') }}:7700"
    networks:
      - {{ project_name }}-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://127.0.0.1:7700/health"]
      interval: 10s
      timeout: 5s
      retries: 5

{% endif %}
{% if include_minio | default(false) %}
  # ===================
  # Object Storage (MinIO)
  # ===================
  minio:
    image: minio/minio:latest
    container_name: {{ project_name }}-minio
    restart: on-failure
    ports:
      - "127.0.0.1:{{ minio_api_port | default('9010') }}:9000"
      - "127.0.0.1:{{ minio_console_port | default('9011') }}:9001"
    environment:
      MINIO_ROOT_USER: {{ project_name }}
      MINIO_ROOT_PASSWORD: {{ project_name }}-dev-secret
    command: server /data --console-address ":9001"
    volumes:
      - {{ project_name }}-minio-data:/data
    networks:
      - {{ project_name }}-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/minio/health/live"]
      interval: 30s
      timeout: 20s
      retries: 3

  minio-setup:
    image: minio/mc:latest
    container_name: {{ project_name }}-minio-setup
    depends_on:
      minio:
        condition: service_healthy
    entrypoint: >
      /bin/sh -c "
      mc alias set {{ project_name }} http://minio:9000 {{ project_name }} {{ project_name }}-dev-secret;
      mc mb --ignore-existing {{ project_name }}/{{ project_name }}-default;
      mc mb --ignore-existing {{ project_name }}/{{ project_name }}-test;
      mc anonymous set download {{ project_name }}/{{ project_name }}-default;
      mc anonymous set download {{ project_name }}/{{ project_name }}-test;
      echo 'MinIO setup complete';
      "
    networks:
      - {{ project_name }}-network

{% endif %}
  # ===================
  # Mail Testing
  # ===================
  mailpit:
    image: axllent/mailpit:latest
    container_name: {{ project_name }}-mailpit
    restart: on-failure
    ports:
      - "127.0.0.1:{{ mailpit_smtp_port | default('1030') }}:1025"
      - "127.0.0.1:{{ mailpit_web_port | default('8030') }}:8025"
    networks:
      - {{ project_name }}-network

networks:
  {{ project_name }}-network:
    driver: bridge

volumes:
  {{ project_name }}-postgres-data:
  {{ project_name }}-redis-data:
{% if include_meilisearch | default(false) %}
  {{ project_name }}-meilisearch-data:
{% endif %}
{% if include_minio | default(false) %}
  {{ project_name }}-minio-data:
{% endif %}
