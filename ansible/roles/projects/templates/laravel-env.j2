# AWS_ACCESS_KEY_ID=minio
# AWS_SECRET_ACCESS_KEY=minio-dev-secret
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET={{ project_name | replace('-', '_') }}
# AWS_ENDPOINT=http://host.docker.internal:9000
# AWS_USE_PATH_STYLE_ENDPOINT=true
