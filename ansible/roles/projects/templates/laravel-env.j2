# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET={{ project_name | replace('-', '_') }}
# AWS_ENDPOINT=http://minio-dev.lan:9000
# AWS_USE_PATH_STYLE_ENDPOINT=true
# AWS_URL=http://minio-dev.lan:9000/{{ project_name | replace('-', '_') }}

VITE_APP_NAME="${APP_NAME}"
