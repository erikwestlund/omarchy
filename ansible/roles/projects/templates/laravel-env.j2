APP_NAME="{{ project_name | replace('-', ' ') | title }}"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://{{ project_domain | default(project_name + '.test') }}

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database (PostgreSQL in Docker)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE={{ project_name | replace('-', '_') }}
DB_USERNAME={{ project_name | replace('-', '_') }}
DB_PASSWORD={{ project_name }}-dev-secret

# Session & Cache
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# Redis (in Docker)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail (Mailpit in Docker)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@{{ project_domain | default(project_name + '.test') }}"
MAIL_FROM_NAME="${APP_NAME}"

{% if include_meilisearch | default(false) %}
# Meilisearch (in Docker)
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY={{ project_name }}-dev-secret

{% endif %}
{% if include_minio | default(false) %}
# MinIO S3-compatible Storage (in Docker)
AWS_ACCESS_KEY_ID={{ project_name }}
AWS_SECRET_ACCESS_KEY={{ project_name }}-dev-secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET={{ project_name }}-default
AWS_ENDPOINT=http://minio:9000
AWS_USE_PATH_STYLE_ENDPOINT=true
AWS_URL=http://localhost:9000/{{ project_name }}-default
{% endif %}

VITE_APP_NAME="${APP_NAME}"
